<SaveButton>:
    size_hint: 0.5, 0.2

<CreateSaveButton>:
    size_hint: 0.5, 0.2
    on_press:
        app.window.current = 'create-save'
        app.window.transition.direction = 'left'
        app.window.current_screen.build(self.get_saveID())

<DeleteSaveButton>:
    size_hint: 0.35, 0.2
    on_press:
        app.window.current = 'del-save'
		app.window.transition.direction = 'down'
		app.window.current_screen.build(self.get_saveID())

<VerifyDeleteButton>:
	size_hint: 0.3, 0.1
	on_press:
		app.window.current = 'start'
		app.window.transition.direction = 'up'
		app.window.current_screen.delete_save(self.text, self.get_saveID())

<SubmitSaveButton>:
    size_hint: 0.4, 0.1
    on_press:
        temp = app.window.current_screen.username_bar.text
        app.window.current = 'start'
        app.window.transition.direction = 'right'
        app.window.current_screen.create_save(self.get_saveID(), temp)

<StartScreen>:
	name: 'start'

<DeleteSaveScreen>:
	name: 'del-save'

<CreateSaveScreen>:
    name: 'create-save'
