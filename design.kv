<SaveButton>:
    size_hint: 0.5, 0.2
    on_press:
        app.window.current = 'notes'
        app.window.transition.direction = 'up'
        app.window.current_screen.build(saveID=self.get_saveID())

<CreateSaveButton>:
    size_hint: 0.5, 0.2
    on_press:
        app.window.current = 'create-save'
        app.window.transition.direction = 'left'
        app.window.current_screen.build(self.get_saveID())

<DeleteSaveButton>:
    size_hint: 0.35, 0.2
    on_press:
        app.window.current = 'del-save'
		app.window.transition.direction = 'down'
		app.window.current_screen.build(self.get_saveID())

<VerifyDeleteButton>:
	size_hint: 0.3, 0.1
	on_press:
		app.window.current = 'start'
		app.window.transition.direction = 'up'
		app.window.current_screen.delete_save(self.text, self.get_saveID())

<SubmitSaveButton>:
    size_hint: 0.4, 0.1
    on_press:
        temp = app.window.current_screen.username_bar.text
        app.window.current = 'start'
        app.window.transition.direction = 'right'
        app.window.current_screen.create_save(self.get_saveID(), temp)

<NoteButton>:
    size_hint: 0.35, 0.2
    on_press:
        temp = app.window.current_screen.get_saveID()
        app.window.current = 'note'
        app.window.transition.direction = 'up'
        app.window.current_screen.build(self.get_noteID(), temp)

<NextButton>:
    size_hint: 0.1, 0.05
    on_press:
        app.window.current_screen.build(page_change=1)

<PrevButton>:
    size_hint: 0.1, 0.05
    on_press:
        app.window.current_screen.build(page_change=-1)

<BackButton>:
    size_hint: 0.1, 0.05
    on_press:
        app.window.current = 'start'
        app.window.transition.direction = 'down'

<NewNoteButton>:
    size_hint: 0.1, 0.05
    on_press:
        temp = app.window.current_screen.get_saveID()
        app.window.current = 'note'
        app.window.transition.direction = 'up'
        app.window.current_screen.build(None, temp)

<CustomerBar>:
    size_hint: 0.4, 0.1

<RequirementsBar>:
    size_hint: 0.4, 0.3

<DeadlineBar>:
    size_hint: 0.4, 0.1

<CompletedCheckBox>:
    size_hint: 0.1, 0.1

<SubmitNoteButton>:
    size_hint: 0.3, 0.1
    on_press:
        app.window.current_screen.submit()
        app.window.current = 'notes'
        app.window.transition.direction = 'down'
        app.window.current_screen.build()

<NoteBackButton>:
    size_hint: 0.1, 0.1
    on_press:
        app.window.current = 'notes'
        app.window.transition.direction = 'down'

<StartScreen>:
	name: 'start'

<DeleteSaveScreen>:
	name: 'del-save'

<CreateSaveScreen>:
    name: 'create-save'

<NotesScreen>:
    name: 'notes'

<NoteScreen>:
    name: 'note'
